<%- include("./partials/head.ejs") %>
    <%- include("./partials/header.ejs") %>
        <div class="contenedor">
            <form class="mtx" method="POST" action="/products/create" enctype="multipart/form-data">
                <div>
                    <label class="col-3" for="">Producto</label>
                    <input type="text" placeholder="Ingrese el nombre del producto" name="nombre" value="">
                </div>
                <br>
                <div>
                    <label class="col-3" for="">Precio</label>
                    <input type="number" placeholder="Ingrese precio del producto" name="precio" value="">
                </div>
                <br>
                <div>
                    <label class="col-3" for="">Descuento</label>
                    <input type="number" placeholder="Ingrese descuento del producto" name="discount" value="">
                </div>
                <br>
                <div>
                    <label class="col-3 col-md-3" for="">Categoria</label>
                    <select class="col-8" name="categoria" value="">
                        <option>Empanadas</option>
                        <option>Hamburguesa</option>
                        <option>Pizza</option>
                        <option>Tartas</option>
                    </select>
                </div>
                <br>
                <div class="form-group">
                    <label class="col-3" for="exampleFormControlSelect2">Clasificacion</label>
                    <select multiple class="form-control" id="exampleFormControlSelect2" name="clasificacion" value="">
                        <option>Oferta del dia</option>
                        <option>Mas vendidos</option>
                        <option>Sector Saludable</option>
                        <option>Bebidas</option>
                        <option>Recomendacion del cheff</option>
                    </select>
                </div>
                <div>
                    <label class="col-3" for="">Cantidad</label>
                    <input type="number" placeholder="Ingrese stock disponible" name="stock" value="">
                </div>
                <br>

                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Detalle del producto</label>
                    <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Ingrese descripcion del producto" name="descripcion" value="" rows="3"></textarea>
                </div>
                <br>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Seleccione una imagen</label>
                    <input type="file" class="form-control-file" name="image" id="exampleFormControlFile1">
                </div>
                <br>
                <button type="submit" class="btn btn-dark">Subir Producto</button>
                <br>
                <input class="btn btn-primary" type="reset" value="Reset">
            </form>
        </div>
        <%- include("./partials/footer.ejs") %>